{% extends 'base.html.twig' %}

{% block title %}CB - Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('images/logoCB.png') }}" alt="Logo" height="90">
            </a>            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active fs-4">
                        <a class="nav-link" href="/" >Accueil</a>
                    </li>
                    <li class="nav-item fs-4">
                        <a class="nav-link" href="/products">Mes Produits</a>
                    </li>
                    <li class="nav-item fs-4">
                        <a class="nav-link" href="{{ path('app_logout') }}">LogOut</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container mt-4">
    <h1>Liste des produits</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>
                    <form method="post" action="{{ path('save_product_to_customer', {'productId': product.id}) }}">
                        <input type="hidden" name="productId" value="{{ product.id }}">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}