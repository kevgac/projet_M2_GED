{% extends 'base.html.twig' %}

{% block title %}CB - Register{% endblock %}

{% block stylesheets %}
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
<style>
    body, button, input, label {
        font-family: 'Open Sans', sans-serif;
    }
    .login-container {
        max-width: 400px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .login-logo img {
        max-width: 120px;
    }
    .login-form input {
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 0.375rem; 
        padding: 0.75rem 1rem; 
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box; 
    }
    .login-form button {
        background-color: #004358; 
        color: white;
        padding: 0.75rem 1.5rem; 
        margin-top: 1rem;
        border: none;
        border-radius: 0.375rem; 
        cursor: pointer;
        font-size: 1rem; 
        width: 100%;
    }
    .login-form button:hover {
        background-color: #003245;
    }
    .login-form label {
        display: block;
        text-align: left;
        margin-bottom: .5rem;
    }
    .login-form .checkbox {
        text-align: left;
    }
    .login-form .checkbox label {
        display: inline;
    }
    .login-form a {
        text-decoration: none;
        color: #4f46e5; 
    }
    .login-form a:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-logo">
        <img src="{{ asset('images/logoCB.png') }}" alt="Chemical Brothers Logo">
    </div>
    <h2>Inscrivez-Vous</h2>

    {{ form_start(registrationForm, {'attr': {'class': 'login-form'}}) }}

        {{ form_row(registrationForm.firstName, {
            label: 'Prénom',
            attr: {'class': 'form-control', 'placeholder': 'Prénom'}
        }) }}
        {{ form_row(registrationForm.lastName, {
            label: 'Nom',
            attr: {'class': 'form-control', 'placeholder': 'Nom'}
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse Email',
            attr: {'class': 'form-control', 'placeholder': 'Adresse Email'}
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
            attr: {'class': 'form-control', 'placeholder': 'Mot de passe'}
        }) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}

    <div>
        Vous êtes déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a>
    </div>
</div>
{% endblock %}
